{
  "expo": {
    "name": "sam-blog",
    "slug": "sam-blog",
    "scheme": "SamBlog",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro",
      //USED FOR STATIC WEBSITE
      "output":"static"
    },
    "plugins": [
      // CHANGE ORIGIN TO ACTUAL HOSTED URL
      ["expo-router", {"origin":"http://localhost:8081/"}]
    ],
    //USED THIS TO HOST IT ON GITHUB PAGES, BUT ITS NOT WORKING TOO WELL
    "experiments": {
      "baseUrl": "/sam-blog"
    }
  }
}
